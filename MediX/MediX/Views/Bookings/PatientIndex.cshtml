@model IEnumerable<MediX.Models.Booking>

@{
    ViewBag.Title = "Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-6">
        <h2 class="d-inline">Bookings</h2>
    </div>
    <div class="col-md-6 d-flex flex-column align-items-end">
        @if (User.IsInRole("MedicalStaff") | User.IsInRole("FacilityManager") | User.IsInRole("Administrator"))
        {
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success " })
        }
    </div>
</div>
@*<div id="calendar"></div>
    <div style="display: none">*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            Patient Name
        </th>
        <th>
            Medical Center
        </th>
        <th>
            Booked by
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FullName)
            </td>
            <td>
                @Html.ActionLink(item.XRayRoom.MedicalCenter.Name, "Details", "MedicalCenters", new { id = item.XRayRoom.MedicalCenter.Id }, null)
            </td>
            <td>
                @if (!User.IsInRole("Standard"))
                {
                    @Html.ActionLink(item.BookerStaff.FullName, "Details", "Staffs", new { id = item.BookerStaff.Id }, null)
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.BookerStaff.FullName)
                }
            </td>
            <td>
                @if (User.IsInRole("MedicalStaff") | User.IsInRole("FacilityManager") | User.IsInRole("Administrator"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                }
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                @if (User.IsInRole("MedicalStaff") | User.IsInRole("FacilityManager") | User.IsInRole("Administrator"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                }
            </td>
        </tr>


    }

</table>

@*</div>*@


@section Scripts {
    @Scripts.Render("~/bundles/fullcalendar")
}