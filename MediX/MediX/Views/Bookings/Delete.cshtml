@model MediX.Models.Booking

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="text-center mt-4">Delete Booking</h2>

    <div class="card mt-4">
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3">
                    Date and Time:
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DateTime)
                </dd>

                <dt class="col-sm-3">
                    Notes:
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Notes)
                </dd>

                <dt class="col-sm-3">
                    Status:
                </dt>
                <dd class="col-sm-9">
                    @if (Model.IsCompleted)
                    {
                        <span style="color: green; font-weight: bold">Completed</span>
                    }
                    else
                    {
                        <span style="color: darkorange; font-weight: bold">Pending</span>
                    }
                </dd>

                <dt class="col-sm-3">
                    Date Created:
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>

                <dt class="col-sm-3">
                    Patient ID:
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Patient.Id)
                </dd>

                <dt class="col-sm-3">
                    Staff:
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Staff.FullName)
                </dd>

                <dt class="col-sm-3">
                    Medical Center:
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MedicalCenter.Name)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="text-center">
                <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            }
        </div>
    </div>
</div>
