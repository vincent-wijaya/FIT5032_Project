@model IEnumerable<MediX.Models.Booking>

@{
    ViewBag.Title = "Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>
    @if (User.IsInRole("MedicalStaff") | User.IsInRole("FacilityManager") | User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<div id="calendar"></div>
<div style="display: none">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.Id)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.BookerStaff.Id)*@
                Staff
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XRayRoom.RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating.Comment)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCompleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookerStaff.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.XRayRoom.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating.Comment)
                </td>
                <td>
                    @if (User.IsInRole("MedicalStaff") | User.IsInRole("FacilityManager") | User.IsInRole("Administrator"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    }
                    |
                    @Html.ActionLink("Details", "Details", new { id = item.Id, @class = "btn btn-primary" }) |
                    @if (User.IsInRole("MedicalStaff") | User.IsInRole("FacilityManager") | User.IsInRole("Administrator"))
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                </td>
            </tr>


        }

    </table>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/fullcalendar")
}